<resources>

    <!-- Light theme. -->
    <style name="Theme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="icon_color">@color/colorIconBlack</item>
    </style>

    <attr name="icon_color" format="reference" />

    <!-- Dark theme. -->
    <style name="Theme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="icon_color">@color/colorIconWhite</item>
    </style>

</resources>